            height: 40px;
            font-size: 18px;
            color: #fff;
            text-align: center;
            line-height: 40px;
        }

        .right-bar .icon-focus {
            background-color: rgb(196,0,0);
        }
        .right-bar .bar-item-tip {
            position: absolute;
            height: 38px;
            width: 117px;
            background-color: #434343;
            top: 1px;
            right: 35px;
            text-align: center;
            color: #ddd;
            font-size: 14px;
            line-height: 38px;
            opacity: 1;
        }
        .right-bar .tip-triangle {
            position: absolute;
            font-size: 35px;
            color: #434343;
