extends layout
block content
	style.
		.cont-content {
			width: 1200px;
			margin: 0 auto;
		}
		.login-wrap {
			width: 980px;
			float: right;
		}
		.login-title {
		    font-size: 15px;
		    font-weight: bold;
		    height: 39px;
		    line-height: 39px;
		    border-bottom: 1px solid #bbb;
		    padding-left: 10px;
		    color: #333;
		}
		.login-content {
		    width: 95%;
		    margin: 30px auto 5px;
		    max-width: 260px;
		    min-width: 180px;
		    color: #6d6d6d;
		}
		.login-item {
			position: relative;
			margin-bottom: 13px;
		}
		.login-input {
			width: 96%;
		    font: 12px "微软雅黑";
		    height: 34px;
		    line-height: 34px;
		    max-width: 240px;
		    min-width: 151px;
		    border: 1px solid #e9e9e9;
		    outline-color: #dedede;
		    padding-left: 25px;
		    margin: 0 auto;
		}
		#userName {
			background: url('/img/icons_login.png')
		}
		#password {
			background: url('/img/icons_login.png') 0 -30px
		}
		#login-btn {
		    width: 240px;
		    height: 47px;
		    background: url('/img/icons_login.png') 0 -63px;
		    cursor: pointer;
		    color: white;
		    text-align: center;
		    line-height: 47px;
		    font-size: 14px;
		    letter-spacing: 1px;
		}
		#go-register {
			float: right;
			margin-right: 20px;
			cursor: pointer;
		}
		.login-title .tip-msg {
		    display: inline-block;
			font-size: 12px;
		    font-weight: normal;
		    margin-left: 340px;
		    color: #c00;
		    font-family: Verdana;
		    letter-spacing: 1px;
		}
		.login-item .tip-msg {
		    position: absolute;
		    right: -68px;
		    top: 10px;
		    font-size: 12px;
		    color: #c00;
			font-family: Verdana;
		}
		.login-item .tip-msg .fa-times-circle {
			font-size: 14px;
		    position: relative;
		    top: 1px;
		    margin-right: 2px;
		    margin-left: 3px;
		}

	div.cont-content.row
		div.login-wrap
			div.login-title 会员登陆
				div.tip-msg.hide 用户名或密码错误
			div.login-content
				div.login-item
					input#userName.login-input(type="text", placeholder="帐号")
					div.tip-msg.hide
						i.fa.fa-times-circle(aria-hidden="true")
						|请输入账号
				div.login-item
					input#password.login-input(type="text", placeholder="密码")
					div.tip-msg.hide
						i.fa.fa-times-circle(aria-hidden="true")
						|请输入密码
				div.login-item
					div#login-btn 登陆
				div.login-item
					div#go-register 免费注册>

	script.
		$('#login-btn').on('click', function() {
			var para,
				userNameObj = $('#userName'),
				passwordObj = $('#password')

			if(userNameObj.val().trim() === '') {
				userNameObj.next().removeClass('hide')
				return
			}
			if(passwordObj.val().trim() === '') {
				passwordObj.next().removeClass('hide')
				return
			}
			para = {
				user: userNameObj.val(),
				password: passwordObj.val()
			}
		})


		$('.login-input').on('focus', function() {
			$('.tip-msg').addClass('hide')
		})
		$('#go-register').on('click', function() {
			location.href = 'register'
		})