        $(document).on('hover', '.tooltip-status', function() {
            var left = $('#tooltip-container').outerWidth() - $('.tooltip-status').outerWidth()

            left = '-' + left + 'px'
            $('#tooltip-container').removeClass('hide')
            $('#tooltip-container').css({left: left})
        }, function() {
            $('#tooltip-container').addClass('hide')
        })

        $('#tooltip-container').on('click', function() {
