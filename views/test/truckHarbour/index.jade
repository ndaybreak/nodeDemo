extends layout
block content
    style.
        .cont-banner {
            width: 1440px;
            height: 380px;
            cursor: default;
            overflow: hidden;
            display: block;
            outline: none;
            margin: 0px auto;
            position: relative;
            z-index: 1;
            background-image: url("http://0.ss.faisys.com/image/template/banners/1229.jpg?v=");
            background-position: 50% 50%;
            background-repeat: no-repeat;
        }

        .cont-content {
            width: 1200px;
            margin: 0 auto;
            padding-top: 120px;
        }
        .productShow-title {
              background: #0077ba;
              height: 40px;
              line-height: 40px;
              padding: 0 15px;
              color: #FFF;
              font-size: 15px;
              font-weight: bold;
        }
        .productShow-content {
            border: 1px solid #eee;
            border-top: 0;
            width: 100%;
            padding: 0 5px;
        }
        .product-item {
            position: relative;
            float: left;
            margin: 10px 40px 10px 25px;
            height: 186px;
        }
        .product-item img {
            width: 121px;
            height: 160px;
        }
        .productItem-label {
            display: inline-block;
            position: absolute;
            width: 100%;
            left: 0;
            bottom: 0;
            line-height: 26px;
            text-align: center;
        }

        .statistics-wrap {
            height: 450px;
            width: 100%;
            border: 1px solid #eee;
            border-top: 0;
            margin-top: 10px;
        }
        .stat-module {
            text-align: center;
        }
        .stat-moduleIcon {
            padding-right: 10px;
            margin-bottom: 24px;
        }
        .stat-moduleIcon img {
            width: 145px;
            height: 145px;
            margin: 0 auto;
            display: block;
        }
        .stat-moduleValue {
            font-size: 40px;
            color: #333639;
            font-weight: bold;
        }
        .stat-moduleLabel {
            font-size: 16px;
            color: #999999;
            line-height: 30px;
        }
        .stat-moduleDetal {
            width: 210px;
            font-size: 14px;
            line-height: 28px;
            color: #C0C0C0;
            margin: 0 auto;
        }

